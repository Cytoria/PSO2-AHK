#maxThreadsPerHotkey, 3
setKeyDelay, 50
setMouseDelay, 50
autogrinder:=0
autogrinderrepeats:=0
enabled:=false
MsgBox, Script is ready to activate, Alt + F1 to toggle.
Suspend, On

!f1::
Suspend, Permit
{
	if (enabled=true)
	{
		MsgBox, Script disabled.
		IfMsgBox, OK
		{
		SplashTextOff
		Suspend, On
		}
	}
	else if (enabled=false)
	{
		MsgBox, Script enabled.
		IfMsgBox, OK
		{
		SplashTextOff
		Suspend, Off
		}
	}
	enabled:=!enabled
}
return

+1::
{
	Send {Numpad1}
	SplashTextOn, , , Switched to Weapon 1.
	Sleep, 250
	SplashTextOff
}
return

$+f1::
#MaxThreadsPerHotkey 2
{
	autogrinder:=!autogrinder
	
	if (autogrinder=1) 
	{
		MsgBox, Auto Excube to Grinder enabled. 
		SplashTextOn, , , Executing...
	}
	else if (autogrinder=0) 
	{
		MsgBox, Auto Excube to Grinder disabled. 
		SplashTextOn, , , Stopping. Please wait for last loop...
	}
	
	
while (autogrinder=1)
    {
		Send {Enter} ; open shop     change to suit your ping and pc
		Sleep, 800
		Send {Left} ; maxbuy grinders
		Sleep, 50
		Send {Enter} ; purchase
		Sleep, 100
		Send {Enter} ; purchase     change to suit your ping and pc
		Sleep, 350
		Send {Escape} ;
		Sleep, 200
		Send {Up} ; 
        Sleep, 50
        Send {Up} ; select storage
		Sleep, 50
		Send {Enter} ; open storage
		Sleep, 100
		Send {Enter} ; deposit
		Sleep, 100
		Send {Enter} ;
		Sleep, 100
		Send {Enter} ;
		Sleep, 100
		Send {Enter} ; deposit to storage
		Sleep, 100
		Send {Down} ; character storage     change to select which storage you use
		Sleep, 50
		Send {Enter} ; deposit
		Sleep, 100
		Send {Right} ; max
		Sleep, 50
		Send {Enter} ; deposit
		Sleep, 100
		Send {Enter} ; deposit
		Sleep, 150
		Send {Escape} ; 
		Sleep, 150
		Send {Escape} ; 
		Sleep, 150
		Send {Down} ; shop
		Sleep, 50
		Send {Down} ; shop
		Sleep, 100
		if (autogrinder=0)
		{ 
		SplashTextOn, , , Stopping...
		Sleep, 1000
		SplashTextOff
		}
		else
		{
		SplashTextOn, , , Repeating...
		}
	}
	autogrinder:=false
}
return
